@model DashboardTeacherStudentCourseViewModel

<div class="page-top animated fadeIn">
    <div class="text-center">
        <i class="fa fa-tachometer fa-5x" aria-hidden="true"></i>
        <h1>@Model.Course.CourseName Course Dashboard</h1>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 fadeInLeft animated">
                <div class="card hoverable">
                    <div class="card-header text-center">
                        <h2>Enrolled Students</h2>
                    </div>
                    <div class="card-body">
                        @{int i = 0;
                            int a = 0;
                            if (Model.Students.Count == 0)
                            {
                                <p>There are no students enrolled in this course.</p>
                            }
                            else
                            {

                                foreach (var item in Model.Students)
                                {
                                    <div>
                                        <button class="btn btn-info btn-block hoverable login" type="button" data-toggle="collapse" data-target="#collapse@(i)" aria-expanded="false" aria-controls="collapse@(i)">
                                            <h4>@item.FirstName @item.LastName</h4>
                                        </button>
                                    </div>

                                    <div class="collapse" id="collapse@(i)">
                                        <div class="mt-3">
                                            <div class="card white text-center z-depth-2 hoverable">
                                                <div class="card-body">
                                                    <div class="text-left black-text">
                                                        <p class="black-text mb-0">


                                                            <div class="row">
                                                                <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                                                                    <a class="btn btn-info btn-block hoverable login" href="mailto:@{@item.Email}" target="_blank"><i class="fa fa-envelope fa-fw" aria-hidden="true"></i>&nbsp; Email</a>
                                                                </div>

                                                                <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                                                                    <button class="btn btn-info btn-block hoverable register" type="button" data-toggle="collapse" data-target="#collapseAssignment@(a)" aria-expanded="false" aria-controls="collapseAssignment@(a)"><i class="fa fa-book fa-fw" aria-hidden="true"></i>&nbsp; Assignments</button>
                                                                </div>
                                                            </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    i++;



                                    <br />
                                }
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-6 fadeInRight animated">
                <div class="card hoverable">
                    <div class="card-header text-center">
                        <h2>Student Assignments</h2>
                    </div>
                    <div class="card-body">
                        <div class="collapse" id="collapseAssignment@(a)">
                            <div class="mt-3">
                                <div class="card white text-center z-depth-2 hoverable">
                                    <div class="card-body">
                                        <div class="text-left black-text">
                                            <p class="black-text mb-0">

                                                <span>Surprise, Not implemented yet :) </span>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>